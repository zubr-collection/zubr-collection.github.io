        .slide-8 {
            background-image:url(./assets/pics/slide8.jpg);
        }

        .slide-9 {
            background-image:url(./assets/pics/slide9.jpg);
        }

        @media (pointer: coarse) {
            .swiper-button-next:focus,
            .swiper-button-prev:focus,
            .swiper-pagination-bullet:focus {
                outline: none;
            }
        }


        @media (max-width: 800px) {
            .welcome {
                top: initial;
                bottom: 1.5rem;
                left: 0;
                width: 100%;
                padding: 0.75rem;

                border-bottom-left-radius: 0;
                border-bottom-right-radius: 0;
            }

            .swiper-container {
                width: 100%;
                height: calc(100vh - var(--header-height));
            }

            .swiper-button-next,
            .swiper-button-prev {
                border: none;
            }

            .swiper-pagination {
                display: none;
            }

            .slide-0 {
